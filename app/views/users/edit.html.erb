

<h2>User info</h2>

<% if @user.errors.any? %>
  <%= @user.errors.count %>error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
  <div class>
  <label for="inputName">Name</label>
  <div><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></div>
  </div>
  
  <div class>
  <label for="inputImage">Image</label>
  <div><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></div>
  </div>
  
  <div class>
  <label for="inputIntroduction">Introduction</label>
  <div><%= f.text_area :introduction, id: "inputIntroduction" %></div>
  </div>
  
  <%= f.submit "Update User" %>
<% end %>
