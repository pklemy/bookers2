<div>
  <%= flash[:notice] %>
</div>


<div class="container px-5 px-sm-0">
<div class="row">
<div class="col-md-3">
<%= render 'books/tenplate',user: @user, book: @book %>
</div>

<div class="col-md-8 offset-md-1">
 <h1>Books</h1>
 <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  
  <tbody>
   <% @books.each do |book| %>
  <tr>
   <td><%= link_to user_path(book.user) do %>
   <%= image_tag book.user.get_profile_image(100, 100) %>
   <%#= link_to "プロフィール編集", users_path(:id) %>
   <% end %>
   </td>
   <td><%= link_to book.title ,book_path(book.id)%></td>
   <td><%= book.body %></td>
   <% end %>
 </tr>
 </tbody>
</table>
</div>
</div>
</div>