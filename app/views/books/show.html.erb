<h1>Bookers#show</h1>
<p>Find me in app/views/bookers/show.html.erb</p>

<%= render 'tenplate',user:@user %>

<table>
   <h1>Book detail</h1>
<tr>
   <td><%= image_tag @user.get_profile_image(100, 100) %>
       <%= link_to @user.name, user_path(@user.id)%></td>
   <td><%= link_to @book.title ,book_path(@book.id)%></td>
   <td><%= @book.body %></td>
   <% if @book.user == current_user %>
   <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
   <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>  
<% end %>
 </tr>
</table>