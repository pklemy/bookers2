<h1>User info </h1>
<%= form_with model: User.new do |f| %>
<%= image_tag user.get_profile_image(100, 100) %>

<h4>name</h4>
<%= user.name %>

<h4>introduction</h4>
<%= user.introduction %>

<% if user = current_user %>
  <p><%= link_to "プロフィール編集", edit_user_path(user) %></p>
  <% end %>
<% end %>


<h1>New book</h1>
<%= form_with model: Book.new do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>
